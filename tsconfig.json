{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,

    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "types": ["vite/client"],
    "jsx": "react-jsx",

    "strict": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "compilerOptions": {
      "module": "Node16",
      "moduleResolution": "Node16"
    }
  }
}
